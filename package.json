{
  "devDependencies": {
    "colors": "^1.1.2",
    "lerna": "^2.0.0-rc.4",
    "license-check-and-add": "~2.2.0",
    "moment": "^2.17.1",
    "semver": "^5.3.0",
    "sleep-promise": "^2.0.0"
  },
  "name": "sample-networks",
  "description": "You must install [Lerna](https://lernajs.io) to build this multi-package repository.",
  "version": "0.0.11",
  "main": "index.js",
  "private": true,
  "scripts": {
    "postinstall": "npm run pkgcheck && npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "pretest": "npm run licchk",
    "test": "lerna run --ignore '@(composer-protobuf|fabric-dev-servers)'  test",
    "licchk": "license-check-and-add",
    "pkgcheck": "node ./scripts/pkgcheck.js",
    "pkgstamp": "node ./scripts/pkgstamp.js",
    "pkgbump": "node ./scripts/pkgbump.js && node ./scripts/pkgcheck.js --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperledger/composer-tools"
  },
  "keywords": [
    "blockchain",
    "hyperledger",
    "solutions"
  ],
  "author": "Hyperledger Composer",
  "license": "Apache-2.0",
  "license-check-and-add-config": {
    "folder": ".",
    "license": "LICENSE.txt",
    "exact_paths_method": "EXCLUDE",
    "exact_paths": [
      ".git",
      "node_modules",
      "packages"
    ],
    "file_type_method": "EXCLUDE",
    "file_types": [
      ".enc",
      ".log",
      ".md",
      ".yml"
    ],
    "insert_license": false,
    "license_formats": {
      "js": {
        "prepend": "#!/usr/bin/env node\n/*",
        "append": " */",
        "eachLine": {
          "prepend": " * "
        }
      }
    }
  }
}
